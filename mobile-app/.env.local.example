# WebSocket URL of the relay server (baked in at build time)
NEXT_PUBLIC_RELAY_URL=wss://your-relay-server.railway.app

# Optional: Auto-login token (skip the relay token screen)
# WARNING: Anyone with access to the URL can use this token
NEXT_PUBLIC_RELAY_TOKEN=your-secret-token-here

# Password Authentication (optional but recommended)
# Generate hash with: node -e "console.log(require('bcryptjs').hashSync('yourpassword', 10))"
AUTH_PASSWORD_HASH=

# Secret for signing session tokens (generate a random 32+ char string)
AUTH_SESSION_SECRET=
